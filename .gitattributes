# Auto detect text files and perform LF normalization
* text=auto

# JavaScript files
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.mjs text eol=lf

# JSON files
*.json text eol=lf

# CSS files
*.css text eol=lf
*.scss text eol=lf

# HTML files
*.html text eol=lf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf

# Documents
*.md text eol=lf
*.txt text eol=lf

# Exclude files from being exported
.gitattributes export-ignore
.gitignore export-ignore
